<h1>Listing owners</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Phnumber</th>
      <th>Address</th>
      <th>Postcode</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.firstname %></td>
        <td><%= owner.lastname %></td>
        <td><%= owner.phnumber %></td>
        <td><%= owner.address %></td>
        <td><%= owner.postcode %></td>
        <td><%= owner.state %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

